{% extends('base.html.twig') %}

{% block title %}User {{ app.user.username }}{% endblock %}

{% block body %}

    <div class="container">
        
        <div>
            <div class="mt-3 ">

                <img class="position-absolute" style="width: 36px;height: 36px" src="{{ asset('/build/images/'~app.user.imageFilename) }}" alt="User image">
                <p class="ml-5 pt-3">User profile: {{ app.user.username }}</p>
            </div>
            <hr style="background: #0a0a0a">
            <p><span>First Name: </span>{{ app.user.firstName }}</p>
            <p><span>Last Name: </span>{{ app.user.lastName }}</p>
            <p><span>Username: </span>{{ app.user.username }}</p>
            {% if is_granted('ROLE_ADMIN') %}
            <p><span>User role: </span>{{ app.user.roles[0] }}</p>
            {% endif %}
        </div>




    </div>

{% endblock %}

